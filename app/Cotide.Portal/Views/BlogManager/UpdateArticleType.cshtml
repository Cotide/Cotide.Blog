@{
    ViewBag.Title = "UpdateArticleType";
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
}
@model Cotide.Web.Controllers.BlogManager.ViewModel.ArticleTypeModel
@section Head{
    @Html.StyleSheet("validate/pagevalidator.css")
    @Html.JavaScript("validate/pagevalidator_v2.js")
}

@using (Html.BeginForm("UpdateArticleType", "BlogManager", FormMethod.Post, new
{
    @Id = "UpdateArticleTypeFrom", 
    @class = "form-horizontal"
}))
{  
    <div class="panel panel-default">
        <p>
            @Html.ValidationExSummary("UpdateArticleTypeFrom")
        </p>
        <div class="panel-body">
            <fieldset>
                <div class="tab-pane active" id="input">
                    <div class="component">

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="textinput">   文章类别名称 ：</label>
                            <div class="col-md-10">
                                <span class="help-block">
                                    @Html.TextBoxExFor(x => x.TypeName, new
                                    {
                                        @class = "form-control",
                                        @title = "文章类别名称",
                                        @maxlength = "30",
                                        @placeholder = "请输入文章类别名称(必填)"
                                    }, new ValidateOption()
                                    {
                                        EmptyMsg = "您还没输入文章类别",
                                        Description =
                                            "文章类别格式:1-30位字符",
                                        Min = 1,
                                        Max = 255,
                                        RangeMsg = "请确保文章类别在1-30位字符内"
                                    })
                                    @Html.ValidationMessageExFor(x => x.TypeName)
                                    @Html.HiddenFor(x => x.Id)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="textinput">       状态 ：</label>
                            <div class="col-md-10">
                                <span class="help-block">
                                    @Html.DropDownListFor(x => x.IsShow, new List<SelectListItem>()
                                    {
                                        new SelectListItem(){ Text=@"显示", Value="true"},
                                        new SelectListItem(){ Text=@"隐藏",Value="false"}
                                    },new{
                                        @class = "form-control",
                                    })
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="textinput">  &nbsp;</label>
                            <div class="col-md-10">
                                <span class="help-block">
                                    <button type="submit" class="btn btn-primary"> 保存 </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}
    
 