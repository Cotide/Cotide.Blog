@{
    ViewBag.Title = "UpdateArticleTag";
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
}
@model Cotide.Web.Controllers.BlogManager.ViewModel.ArticleTagModel
@section Head{
    @Html.StyleSheet("validate/pagevalidator.css")
    @Html.JavaScript("validate/pagevalidator_v2.js")
}


@using (Html.BeginForm("UpdateArticleTag", "BlogManager", FormMethod.Post, new
{
    @Id = "UpdateArticleTagFrom",
    @class = "form-horizontal"
}))
{


    <div class="panel panel-default">
        <p>
            @Html.ValidationExSummary("UpdateArticleTagFrom")
        </p>



        <div class="panel-body">
            <fieldset>
                <div class="tab-pane active" id="input">
                    <div class="component">

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="textinput">     文章标签名称 ：</label>
                            <div class="col-md-10">
                                <span class="help-block">
                                    @Html.TextBoxExFor(x => x.TagName, new
                                     {
                                         @class = "form-control",
                                         @title = "文章标签名称",
                                         @maxlength = "30",
                                         @placeholder = "请输入文章标签名称(必填)"
                                     }, new ValidateOption()
                                     {
                                         EmptyMsg = "您还没输入文章标签",
                                         Description =
                                             "文章标签格式:1-30位字符",
                                         Min = 1,
                                         Max = 255,
                                         RangeMsg = "请确保文章标签在1-30位字符内"
                                     })
                                    @Html.ValidationMessageExFor(x => x.TagName)
                                    @Html.HiddenFor(x => x.Id)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="textinput">     状态 ：</label>
                            <div class="col-md-10">
                                <span class="help-block">
                                    @Html.DropDownListFor(x => x.IsShow, new List<SelectListItem>()
                                    {
                                        new SelectListItem(){ Text=@"显示", Value="true"},
                                        new SelectListItem(){ Text=@"隐藏",Value="false"}
                                    }, new
                                    {
                                        @class = "form-control",
                                    })
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="textinput">  &nbsp;</label>
                            <div class="col-md-10">
                                <span class="help-block">
                                    <button type="submit" class="btn btn-primary"> 保存 </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}

       